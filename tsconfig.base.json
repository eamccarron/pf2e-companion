{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@pf2-companion/character-builder": [
        "libs/character-builder/src/index.ts"
      ],
      "@pf2-companion/character-builder/server": [
        "libs/character-builder/src/server.ts"
      ],
      "@pf2-companion/character-builder/types": [
        "libs/character-builder/types/index.ts"
      ],
      "@pf2-companion/data-access-characters": [
        "libs/data-access-characters/src/index.ts"
      ],
      "@pf2-companion/data-access-characters/types": [
        "libs/data-access-characters/types/index.ts"
      ],
      "@pf2-companion/data-access-compendium": [
        "libs/data-access-compendium/src/index.ts"
      ],
      "@pf2-companion/data-access-compendium/types": [
        "libs/data-access-compendium/types/index.ts"
      ],
      "@pf2-companion/db": ["libs/db/src/index.ts"],
      "@pf2-companion/ui-selection": ["libs/ui-selection/src/index.ts"],
      "@types": ["types/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"],
  "types": ["cypress"]
}
