{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@pf2-companion/character-builder-temp": [
        "libs/character-builder-temp/src/index.ts"
      ],
      "@pf2-companion/character-builder-temp/types": [
        "libs/character-builder-temp/types/index.ts"
      ],
      "@pf2-companion/character-builder/data-access": [
        "libs/character-builder/data-access/src/index.ts"
      ],
      "@pf2-companion/character-builder/feature": [
        "libs/character-builder/feature/src/index.ts"
      ],
      "@pf2-companion/character-builder/feature/server": [
        "libs/character-builder/feature/src/server.ts"
      ],
      "@pf2-companion/character-builder/types": [
        "libs/character-builder/types/index.ts"
      ],
      "@pf2-companion/character-builder/ui": [
        "libs/character-builder/ui/src/index.ts"
      ],
      "@pf2-companion/compendium-models": [
        "libs/compendium-models/src/index.ts"
      ],
      "@pf2-companion/compendium-models/types": [
        "libs/compendium-models/types/index.ts"
      ],
      "@pf2-companion/data-access-characters": [
        "libs/data-access-characters/src/index.ts"
      ],
      "@pf2-companion/data-access-characters/types": [
        "libs/data-access-characters/types/index.ts"
      ],
      "@pf2-companion/types/character-builder": [
        "types/character-builder/src/index.ts"
      ],
      "@pf2-companion/types/compendium": ["types/compendium/src/index.ts"],
      "@pf2-companion/ui-general": ["libs/ui-general/src/index.ts"],
      "@pf2-companion/ui-selection": ["libs/ui-selection/src/index.ts"],
      "@pf2-companion/ui-selection/types": ["libs/ui-selection/src/types.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"],
  "types": ["cypress"],
  "emitDecoratorMetadata": true,
  "experimentalDecorators": true
}
