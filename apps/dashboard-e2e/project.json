{
  "name": "dashboard-e2e",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/dashboard-e2e/src",
  "projectType": "application",
  "targets": {
    "e2e": {
      "executor": "@nx/cypress:cypress",
      "dependsOn": ["test-db:up, compendium-api:serve"],
      "options": {
        "cypressConfig": "apps/dashboard-e2e/cypress.config.ts",
        "baseUrl": "http://localhost:4200",
        "devServerTarget": "dashboard:serve:e2e",
        "testingType": "e2e",
        "quiet": true
      }
    },
    "test-db:up": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "docker compose up --detach test-db"
          }
        ],
        "cwd": "{projectRoot}"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/dashboard-e2e/**/*.{js,ts}"]
      }
    }
  },
  "tags": [],
  "implicitDependencies": ["dashboard"]
}
