{
  "name": "dashboard-remix",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/dashboard-remix",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/remix:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/dashboard-remix"
      }
    },
    "docker-build": {
      "dependsOn": ["build"],
      "command": "docker build -f apps/dashboard-remix/Dockerfile . -t \"${CONTAINER_REGISTRY_URL}/dashboard\""
    },
    "docker-push": {
      "dependsOn": ["docker-build"],
      "command": "docker push registry.gitlab.com/mccarronea/pf2e-companion/dashboard:latest"
    },
    "serve:test": {
      "executor": "@nx/remix:serve",
      "options": {}
    },
    "serve": {
      "executor": "@nx/remix:serve",
      "options": {
        "port": 3000,
        "command": "npx remix-serve build/index.js",
        "cwd": "{projectRoot}"
      }
    },
    "serve:e2e": {
      "executor": "@nx/remix:serve",
      "options": {
        "port": 3000,
        "command": "npx remix-serve build/index.js > /dev/null",
        "cwd": "{projectRoot}"
      }
    },
    "serve:dev": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npx remix dev -c \"node server.mjs\""],
        "cwd": "{projectRoot}"
      }
    },
    "start": {
      "dependsOn": ["build"],
      "command": "remix-serve build",
      "options": {
        "cwd": "apps/dashboard-remix"
      }
    },
    "typecheck": {
      "command": "tsc",
      "options": {
        "cwd": "apps/dashboard-remix"
      }
    }
  }
}
