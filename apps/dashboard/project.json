{
  "name": "dashboard",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/dashboard",
  "projectType": "application",
  "tags": [],
  "targets": {
    "install": { "command": "npm install" },
    "build": {
      "executor": "@nx/remix:build",
      "dependsOn": ["install"],
      "options": {
        "outputPath": "{projectRoot}"
      }
    },
    "serve": {
      "executor": "@nx/remix:serve",
      "dependsOn": ["install"],
      "options": {
        "port": 4200,
        "command": "node server/server.mjs"
      }
    },
    "start": {
      "dependsOn": ["build"],
      "command": "remix-serve build",
      "options": {
        "cwd": "apps/dashboard"
      }
    },
    "typecheck": {
      "command": "tsc",
      "options": {
        "cwd": "apps/dashboard"
      }
    }
  }
}
